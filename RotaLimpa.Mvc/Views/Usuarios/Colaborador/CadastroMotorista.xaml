<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotaLimpa.Mvc.Views.Usuarios.Colaborador.CadastroMotorista"
               xmlns:local="clr-namespace:RotaLimpa.Mvc.Views.Usuarios.Colaborador"
             Title="Cadastro de Motorista">

    <NavigationPage.TitleView>
        <local:MeuCabecalho />
        <!-- Use o controle personalizado aqui -->
    </NavigationPage.TitleView>
    
    <StackLayout Padding="20">
        <Entry Placeholder="Nome do Motorista" Text="{Binding NomeMotorista}" />
        <Label Text="Data de Criação" />
        <DatePicker Date="{Binding Dc_Motorista}" />
        <Entry Placeholder="Status do Motorista" Text="{Binding StMotorista}" />
        <Button Text="Cadastrar" Command="{Binding CadastrarMotoristaCommand}" />
    </StackLayout>
    
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotaLimpa.Mvc.Views.Usuarios.Colaborador.CadastroSetor"
             xmlns:local="clr-namespace:RotaLimpa.Mvc.Views.Usuarios.Colaborador"
             Title="CadastroSetor">
    
    <NavigationPage.TitleView>
        <local:MeuCabecalho />
    </NavigationPage.TitleView>

    <ScrollView>
        <VerticalStackLayout Spacing="3" Padding="15">
            
            <Label Text="Colaborador Id" FontSize="Medium" />
            <Entry Text="{Binding ColaboradorId}" FontSize="Medium" Keyboard="Numeric" />
            <Label Text="Empresa Id" FontSize="Medium" />
            <Entry Text="{Binding EmpresaId}" FontSize="Medium" Keyboard="Numeric" />
            <Label Text="Tipo de Serviço" FontSize="Medium" />
            <Picker Title="---Selecione---" ItemsSource="{Binding ListaTiposServico}" ItemDisplayBinding="{Binding}" SelectedItem="{Binding TipoServicoSelecionado}" />
            <Label Text="Data Inicial" FontSize="Medium" />
            <DatePicker Date="{Binding DiSetor}" />
            <Label Text="Data Final" FontSize="Medium" />
            <DatePicker Date="{Binding DaSetor}" />
            <Label Text="Status do Setor" FontSize="Medium" />
            <Entry Text="{Binding StSetor}" FontSize="Medium" />
            <Label Text="Colaborador " FontSize="Medium" />
            <Entry Text="{Binding Rotas}" FontSize="Medium" />
            <HorizontalStackLayout Spacing="20">
                <Button Text="Salvar" Command="{Binding SalvarCommand}"></Button>
                <Button Text="Cancelar" Command="{Binding CancelarCommand}"></Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>



</ContentPage>




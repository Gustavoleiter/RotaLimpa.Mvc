             xmlns:local="clr-namespace:RotaLimpa.Mvc.Views.Usuarios.Colaborador"
             Title="CadastroRota">
    <NavigationPage.TitleView>
        <local:MeuCabecalho />
        <!-- Use o controle personalizado aqui -->
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Placeholder="Colaborador ID" Text="{Binding Rota.ColaboradorId}" Keyboard="Numeric" />
            <Entry Placeholder="Setor ID" Text="{Binding Rota.SetorId}" Keyboard="Numeric" />
            <!--<DatePicker Placeholder="Data da Rota" Date="{Binding Rota.DtRota}" />
            <TimePicker Placeholder="Hora da Rota" Time="{Binding Rota.TmRota}" />-->

            <Button Text="Cadastrar Rota" Command="{Binding CadastrarRotaCommand}" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>

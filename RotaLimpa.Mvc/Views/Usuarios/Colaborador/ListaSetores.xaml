<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RotaLimpa.Mvc.Views.Usuarios.Colaborador"
             x:Class="RotaLimpa.Mvc.Views.Usuarios.Colaborador.ListaSetores">
    <NavigationPage.TitleView>
        <local:MeuCabecalho />
    </NavigationPage.TitleView>

    <ContentPage.Background>
        <Color>#C3C3C3</Color>
    </ContentPage.Background>

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Setores}" VerticalOptions="FillAndExpand"
                        SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemsLayout>
                <!-- Use o GridItemsLayout com três colunas -->
                <GridItemsLayout Orientation="Vertical" Span="5" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" BackgroundColor="#EDEDED" CornerRadius="10" WidthRequest="230" HeightRequest="200">
                        <StackLayout>
                            <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                            <Label Text="{Binding TipoServico}" FontSize="14" HorizontalOptions="Center"/>
                            <Label Text="{Binding DiSetor, StringFormat='Início: {0:dd/MM/yyyy}'}" FontSize="12" HorizontalOptions="Center"/>
                            <Label Text="{Binding DaSetor, StringFormat='Término: {0:dd/MM/yyyy}'}" FontSize="12" HorizontalOptions="Center"/>
                            <!-- Adicione mais labels conforme necessário para outras propriedades do setor -->

                            <!-- Adicione um botão para detalhes -->
                            <Button Text="Detalhes" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand"
                                    Command="{Binding BindingContext.NavigateToDetailsCommand, Source={x:Reference Name=collectionView}}"
                                    CommandParameter="{Binding}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
